<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_bg"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <include layout="@layout/view_personal_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="44dp">
            <ImageView
                android:id="@+id/iv_activity_mywallet_transfer_from_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/bibi"
                android:layout_marginLeft="38dp"/>
            <TextView
                android:id="@+id/tv_activity_mywallet_transfer_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/txt_title"
                android:text="币币账户"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="转至"
                    android:textColor="@color/txt_app"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="24dp"
                    android:layout_height="1dp"
                    android:background="@color/txt_app"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_activity_mywallet_transfer_to_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/fabi"/>
            <TextView
                android:id="@+id/tv_activity_mywallet_transfer_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_292d33"
                android:text="法币账户"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="38dp"/>
            <ImageView
                android:id="@+id/iv_activity_mywallet_transfer_transferAccount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/account_transfer"
                android:layout_marginLeft="20dp"
                android:visibility="gone"/>
        </LinearLayout>
        <include layout="@layout/view_divider_line_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginTop="35sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_title"
                android:textSize="15sp"
                android:text="数量："/>
            <huoli.com.pgy.Widgets.NumberEditText
                android:id="@+id/edt_activity_mywallet_transfer_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:maxLength="11"
                android:textColor="@color/color_292d33"
                android:background="@color/white"
                android:textColorHint="@color/txt_B8C6D2"
                android:hint="请输入划转数量"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/tv_activity_mywallet_transfer_coinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/color_7a8799"
                android:textSize="16sp"
                android:text="BTC"
                android:visibility="gone"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/txt_app"/>
            <TextView
                android:id="@+id/tv_activity_mywallet_transfer_chooseAll"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="13sp"
                android:textColor="@color/txt_app"
                android:text="全部"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="可用"
                android:textColor="@color/txt_808DAC"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_activity_mywallet_transfer_avail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_808DAC"
                android:textSize="13sp"
                android:text="0.00"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_activity_mywallet_transfer_coinName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_808DAC"
                android:textSize="13sp"
                android:text="BTC"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_activity_mywallet_transfer_submit"
        style="@style/SubmitTextView"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="60dp"
        android:text="确认划转" />
</LinearLayout>