<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
   <include layout="@layout/view_personal_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/color_7a8799"
                android:text="手机号"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/edt_activity_forget_pw_tel"
                style="@style/EditText16spTel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:hint="请输入手机号"/>
            <ImageView
                android:id="@+id/iv_activity_forget_pw_clear"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/tel_clear"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:visibility="gone"/>
        </LinearLayout>
        <include layout="@layout/view_divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/color_7a8799"
                android:text="验证码"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/edt_activity_forget_pw_verificationcode"
                style="@style/EditText16spCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:hint="请输入验证码"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/tv_activity_forget_pw_verificationCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4d94ff"
                android:textSize="16sp"
                android:text="获取验证码"
                android:includeFontPadding="false"
                android:layout_marginRight="5dp"
                android:padding="5dp"/>
        </LinearLayout>
        <include layout="@layout/view_divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/color_7a8799"
                android:text="新密码"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/edt_activity_forget_pw_newPw"
                style="@style/EditText16spPw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:hint="请输入新密码"/>
            <ImageView
                android:id="@+id/iv_activity_forget_pw_pwShow"
                android:layout_width="25dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@mipmap/pw_unshow"
                android:visibility="gone"/>
        </LinearLayout>
        <include layout="@layout/view_divider_line"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_c4c7cc"
            android:textSize="12sp"
            android:text="6~18位数字与字母组合（不含特殊字符）"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_activity_forget_pw_submit"
        style="@style/SubmitTextView"
        android:text="确认"/>
</LinearLayout>