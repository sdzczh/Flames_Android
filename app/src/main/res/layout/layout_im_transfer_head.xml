<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/bg_content_grey"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/layout_imTransferHead_time"
        android:text="2018-04"
        android:textSize="@dimen/font_18sp"
        android:textColor="@color/color_e6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layout_imTransferHead_out"
            android:text="支出：¥200.00"
            style="@style/font_14all6"
            android:textColor="@color/color_e6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/layout_imTransferHead_in"
            android:text="收入：¥200.00"
            android:layout_marginStart="20dp"
            style="@style/font_14all6"
            android:textColor="@color/color_e6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>