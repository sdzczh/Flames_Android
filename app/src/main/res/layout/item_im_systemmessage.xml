<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bg_corners_whitesolid"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <!--标题-->
        <TextView
            android:id="@+id/item_im_systemMessage_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_e6"
            android:textSize="@dimen/font_16sp"
            style="@style/font_15dark"/>
        <View
            android:id="@+id/item_im_systemMessage_point"
            android:visibility="gone"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:background="@drawable/bg_circle_redsolid"/>
    </LinearLayout>


    <!--时间-->
    <TextView
        android:id="@+id/item_im_systemMessage_time"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_e6"
        android:textSize="@dimen/font_12sp"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_im_systemMessage_img"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:background="#40000000"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/item_im_systemMessage_desc"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/font_13sp"
        android:textColor="@color/txt_all8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>