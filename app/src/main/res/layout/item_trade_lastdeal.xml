<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/dark_main_model"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_tradeLastDeal_time"
        android:text="时间"
        android:textColor="@color/txt_all8"
        android:textSize="@dimen/font_14sp"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tradeLastDeal_deal"
        android:text="卖出"
        android:textColor="@color/txt_01C18B"
        android:textSize="@dimen/font_14sp"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tradeLastDeal_price"
        android:text="0.00"
        android:textColor="@color/color_e6"
        android:textSize="@dimen/font_14sp"
        android:maxLines="1"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_tradeLastDeal_amount"
        android:text="0.00"
        android:textColor="@color/color_e6"
        android:textSize="@dimen/font_14sp"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end"
        android:layout_height="wrap_content" />

</LinearLayout>