<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp"
    android:background="@color/bg_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="35dp">
        <!--标题-->
        <TextView
            android:id="@+id/item_im_tradeMessage_title"
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="@dimen/font_16sp"
            style="@style/font_15dark"/>
        <View
            android:id="@+id/item_im_tradeMessage_point"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:background="@drawable/bg_circle_redsolid"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <!--时间-->
        <TextView
            android:id="@+id/item_im_tradeMessage_time"
            android:text="0:000000"
            android:textColor="@color/txt_all9"
            android:textSize="@dimen/font_12sp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/bg_line"/>

    <TextView
        android:id="@+id/item_im_tradeMessage_content"
        android:text="内容内容"
        style="@style/font_14dark"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_im_tradeMessage_orderId"
        android:text="订单编号：12421421423423"
        android:textColor="@color/txt_all6"
        android:textSize="@dimen/font_12sp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>