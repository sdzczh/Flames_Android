<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_gravity="center"
    android:id="@+id/ll_item_marker_list_bg">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_item_market_list_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@color/color_c4c7cc"
                app:riv_oval="true" />
            <TextView
                android:id="@+id/tv_item_market_list_zhName"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_b8c0cc"
                android:layout_below="@+id/iv_item_market_list_icon"
                android:text="比特币比"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_item_market_list_enName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_525a66"
                    android:textSize="16sp"
                    android:text="BTC"
                    android:includeFontPadding="false"/>
                <TextView
                    android:id="@+id/tv_item_market_list_percoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_b8c0cc"
                    android:textSize="12sp"
                    android:text="/CNY"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_7a8799"
                    android:textSize="12sp"
                    android:text="24h量"
                    android:includeFontPadding="false"/>
                <TextView
                    android:id="@+id/tv_item_market_list_volum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_7a8799"
                    android:textSize="12sp"
                    android:text="123456"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/tv_item_market_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_525a66"
            android:text="52430.1"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/tv_item_market_list_priceCny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:textColor="@color/color_7a8799"
            android:text="￥ 52430.1"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_item_market_list_rise"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_corners_52cca3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="+0.096%"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>