<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_marker_list_bg"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_gravity="center"
    android:background="@color/dark_main_model"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_item_market_list_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@color/color_c4c7cc"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tv_item_market_list_zhName"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_item_market_list_icon"
                android:text="比特币比"
                android:textColor="@color/color_b8c0cc"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_market_list_enName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="BTC"
                    android:textColor="@color/color_e6"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_item_market_list_percoin"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="4dp"
                    android:includeFontPadding="false"
                    android:text="/CNY"
                    android:textColor="@color/color_e6"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="24h量"
                    android:textColor="@color/color_e6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_market_list_volum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:includeFontPadding="false"
                    android:text="123456"
                    android:textColor="@color/color_e6"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_market_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="52430.1"
            android:textColor="@color/color_e6"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_market_list_priceCny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:text="￥ 52430.1"
            android:textColor="@color/color_e6"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_market_list_rise"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_corners_52cca3"
            android:gravity="center"
            android:text="+0.096%"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>