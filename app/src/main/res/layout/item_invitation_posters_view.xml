<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_main_model">
    <app.com.pgy.Widgets.RatioRelativeLayout
        android:id="@+id/rl_item_posters_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ratioValue="0.67"
        android:background="@drawable/selector_posters_bg"
        android:padding="2dp">
        <RelativeLayout
            android:id="@+id/rl_item_posters_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_item_posters_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:id="@+id/rl_item_posters_choosed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/dark_main_model"
                android:padding="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_e6"
                    android:textSize="13sp"
                    android:text="PGY邀请返佣"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="9sp"
                    android:textColor="@color/color_e6"
                    android:text="邀您加入PGY，长按识别二维码"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <ImageView
                    android:id="@+id/iv_item_posters_erweima"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@color/black"/>
            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_item_posters_choosed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/share_choosed"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </app.com.pgy.Widgets.RatioRelativeLayout>
</RelativeLayout>