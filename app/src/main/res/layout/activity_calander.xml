<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_personal_title"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="向系统日历中添加事件" />

    <Button
        android:layout_margin="@dimen/size_dp_5"
        android:id="@+id/inputaccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_main_model"
        android:textColor="@color/color_e6"
        android:onClick="onClick"
        android:text="添加账户" />

    <Button
        android:layout_margin="@dimen/size_dp_5"
        android:id="@+id/readUserButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_main_model"
        android:textColor="@color/color_e6"
        android:onClick="onClick"
        android:text="查看账户" />

    <Button
        android:layout_margin="@dimen/size_dp_5"
        android:id="@+id/readEventButton"
        android:layout_width="fill_parent"
        android:background="@color/dark_main_model"
        android:textColor="@color/color_e6"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="查看事件" />

    <Button
        android:layout_margin="@dimen/size_dp_5"
        android:id="@+id/writeEventButton"
        android:layout_width="fill_parent"
        android:background="@color/dark_main_model"
        android:textColor="@color/color_e6"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="插入事件" />

    <Button
        android:layout_margin="@dimen/size_dp_5"
        android:background="@color/dark_main_model"
        android:textColor="@color/color_e6"
        android:id="@+id/delEventButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="删除事件" />

</LinearLayout>