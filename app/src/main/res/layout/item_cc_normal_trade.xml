<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <View
        android:id="@+id/ccNormal_buy_item_topLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:paddingRight="25dp"
            android:paddingTop="4dp">
            <!--头像-->
            <ImageView
                android:id="@+id/ccNormal_buy_item_icon"
                android:src="@mipmap/touxiang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <!--用户名-->
            <TextView
                android:id="@+id/ccNormal_buy_item_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="币圈小诸葛"
                android:textColor="@color/txt_title"
                android:textSize="@dimen/font_15sp"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交 "
                android:textColor="@color/txt_content"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/ccNormal_buy_item_allOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/txt_content"
                android:textSize="11sp"
                android:text="100单"/>
        </LinearLayout>
        <include layout="@layout/view_divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--左半边-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="13dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量"
                        android:textColor="@color/txt_B8C6D2"
                        android:textSize="11sp"
                        />
                    <!--数量-->
                    <TextView
                        android:id="@+id/ccNormal_buy_item_number"
                        android:textColor="@color/txt_content"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 ECN"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限额"
                        android:textColor="@color/txt_B8C6D2"
                        android:textSize="11sp"
                        />
                    <!--限额-->
                    <TextView
                        android:id="@+id/ccNormal_buy_item_limitAmount"
                        android:textColor="@color/txt_content"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="154-2000 CNY"/>
                </LinearLayout>


                <!--支付方式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:id="@+id/ccNormal_buy_item_payAli"
                        android:visibility="visible"
                        android:src="@mipmap/pay_ali"
                        android:layout_marginEnd="12dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                    <ImageView
                        android:id="@+id/ccNormal_buy_item_payWx"
                        android:src="@mipmap/pay_wx"
                        android:visibility="visible"
                        android:layout_marginEnd="12dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                    <ImageView
                        android:id="@+id/ccNormal_buy_item_payBank"
                        android:src="@mipmap/pay_card"
                        android:visibility="visible"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <!--右半边-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_marginRight="23dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:text="单价"
                    android:textColor="@color/txt_B8C6D2"
                    android:textSize="@dimen/font_11sp"
                    android:layout_marginRight="1dp"/>

                <TextView
                    android:id="@+id/ccNormal_buy_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="¥100"
                    android:textColor="@color/txt_app"
                    android:textSize="18sp"
                    android:layout_marginRight="1dp"/>

                <TextView
                    android:id="@+id/ccNormal_buy_item_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="购买"
                    android:textColor="@color/txt_01C18B"
                    android:textSize="@dimen/font_11sp"
                    android:drawableRight="@mipmap/next_go"
                    android:drawablePadding="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/ccNormal_buy_item_bottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/divider_line" />
    <include layout="@layout/view_divider_line_10"/>
</LinearLayout>