<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activitys.MyteamActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="#133B81">
            <FrameLayout
                android:background="#133B81"
                style="@style/title_bg">
                <ImageView
                    android:id="@+id/ll_back"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_back_w"/>
                <TextView
                    android:id="@+id/tv_title"
                    style="@style/title_text"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp"
                    android:text="我的团队"
                    android:drawablePadding="10dp"/>
                <ImageView
                    android:id="@+id/iv_question"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="5dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="8dp"
                    android:src="@mipmap/question1"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_title_right"
                    style="@style/title_text"
                    android:text="历史汇率"
                    android:textColor="#ff3075ee"
                    android:textSize="17sp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"/>
            </FrameLayout>
            <View
                android:id="@+id/view_line"
                style="@style/Line"
                android:layout_marginTop="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_myteam_direct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_myteam_blue_left"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人挖矿收益"
                    android:textColor="#ffffff"
                    android:textSize="13.33sp" />

                <TextView
                    android:id="@+id/tv_myteam_myearnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="0.00 PGY"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_myteam_directnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直推人数："
                    android:textColor="#ffffff"
                    android:textSize="11.33sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_myteam_indirect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_myteam_blue_right"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团队挖矿收益"
                    android:textColor="#ffffff"
                    android:textSize="13.33sp" />

                <TextView
                    android:id="@+id/tv_myteam_teamearnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="0.00 PGY"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_myteam_indirectnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团队人数："
                    android:textColor="#ffffff"
                    android:textSize="11.33sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="挖矿奖励明细"
        android:textColor="#666666"
        android:textSize="12sp" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>