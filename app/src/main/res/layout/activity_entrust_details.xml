                android:text="0.00000000 BTC"
                android:textColor="@color/txt_title"
                android:textSize="12sp"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/activity_entrustDetails_content_tradeAve_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="成交均价 "
                android:textColor="@color/color_99"
                android:textSize="12sp"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/activity_entrustDetails_content_tradeAve_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10187.8 USDT"
                android:textColor="@color/txt_title"
                android:textSize="12sp"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/activity_entrustDetails_content_entrustPrice_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="委托价格 "
                android:textColor="@color/color_99"
                android:textSize="12sp"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/activity_entrustDetails_content_entrustPrice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10187.8 USDT"
                android:textColor="@color/txt_title"
                android:textSize="12sp"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_entrustDetails_content_tradeSum_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/activity_entrustDetails_content_tradeSum_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="委托金额 "
                android:textColor="@color/color_99"
                android:textSize="12sp"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/activity_entrustDetails_content_tradeSum_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10187.8 USDT"
                android:textColor="@color/txt_title"
                android:textSize="12sp"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/activity_entrustDetails_content_poundage_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="手续费 "
                android:textColor="@color/color_99"
                android:textSize="12sp"
                android:includeFontPadding="false"/>
            <TextView
