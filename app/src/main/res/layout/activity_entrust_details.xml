                android:layout_width="17dp"
                android:layout_height="17dp"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:text="买"
                android:background="@mipmap/trade_buy_bg"
                android:textSize="@dimen/font_11sp" />

            <TextView
                android:id="@+id/activity_entrustDetails_top_entrustType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_title"
                android:textSize="@dimen/font_15sp"
                android:text="BTC"/>
            <TextView
                android:id="@+id/activity_entrustDetails_top_entrustType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_99"
                android:textSize="@dimen/font_12sp"
                android:text=" / USDT"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="#C4C7CC"
                android:textSize="@dimen/font_12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去交易"
                android:textColor="#ff3578ef"
                android:textSize="12sp"
                android:drawableRight="@mipmap/more_blue"
                android:drawablePadding="7dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
