<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@color/dark_main_model">
        <ImageView
            android:id="@+id/iv_ftagment_account_total_show"
            android:layout_width="16dp"
            android:layout_height="11dp"
            android:src="@mipmap/asset_show"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总净资产"
            android:textColor="@color/txt_all8"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:src="@mipmap/account_top_coin"/>
            <TextView
                android:id="@+id/tv_ftagment_account_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00000000"
                android:textColor="@color/color_e6"
                android:textSize="27sp"
                android:textStyle="bold"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈￥"
                android:textColor="#66ffffff"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/tv_ftagment_account_total_amountCny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/txt_all8"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dark_main_model">

        <LinearLayout
            android:id="@+id/ll_ftagment_account_total_withdraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_recharge_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充币"
                android:textColor="@color/txt_all8"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_ftagment_account_total_recharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_withdraw_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提币"
                android:textColor="@color/txt_all8"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_ftagment_account_total_trust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/account_transfer_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资金划转"
                android:textColor="@color/txt_all8"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_divider_line_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_main_model">
        <LinearLayout
            android:id="@+id/ll_ftagment_account_total_fabi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="法币账户"
                    android:textColor="@color/txt_all8"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/tv_ftagment_account_total_amountC2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000"
                    android:textColor="@color/color_e6"
                    android:textSize="18sp"
                    android:drawableLeft="@mipmap/account_coin"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="≈￥"
                        android:textColor="#ff999999"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tv_ftagment_account_total_amountC2cCny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/color_e6"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:src="@mipmap/home_notice_more"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <include layout="@layout/view_divider_line"/>
        <LinearLayout
            android:id="@+id/ll_ftagment_account_total_bibi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="币币账户"
                    android:textColor="@color/txt_all8"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/tv_ftagment_account_total_amountTrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000"
                    android:textColor="@color/color_e6"
                    android:textSize="18sp"
                    android:drawableLeft="@mipmap/account_coin"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="≈￥"
                        android:textColor="#ff999999"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tv_ftagment_account_total_amountTradeCny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/color_e6"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:src="@mipmap/home_notice_more"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>