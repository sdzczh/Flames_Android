<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_home_unlogin"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/shape_home_unlogin_top"
            android:visibility="visible"/>
        <HorizontalScrollView
            android:id="@+id/hsv_home_top_unlogin"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_home_top_1"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_home_top_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买币指南"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手把手实操攻略"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_home_top_2"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_home_top_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="玩转资金账户"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="深入了解账户体系"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_home_top_3"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_home_top_3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加入社群"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="老司机带你玩转币"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <FrameLayout
            style="@style/title_bg"
            android:background="@color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_height="@dimen/title_content_height"
                android:gravity="center_vertical"
                android:layout_gravity="bottom">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv_fragment_home_headerImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:riv_oval="true"
                    android:src="@mipmap/icon_unlogin"/>
                <TextView
                    android:id="@+id/tv_fragment_home_unlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_525a66"
                    android:textSize="16sp"
                    android:text="登录/注册"
                    android:layout_marginLeft="10dp"
                    android:includeFontPadding="false"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_fragment_home_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_292d33"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:includeFontPadding="false"
                    android:maxLength="10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginRight="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_title"
                        android:textSize="18sp"
                        android:text="首页"
                        android:visibility="gone"/>
                </LinearLayout>
                <include layout="@layout/view_title_message"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@mipmap/bg_home_top"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总净资产"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:includeFontPadding="false"/>
                <ImageView
                    android:id="@+id/iv_home_top_show"
                    android:layout_width="16dp"
                    android:layout_height="11dp"
                    android:src="@mipmap/home_top_show"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/home_top_coin"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:includeFontPadding="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="≈$"
                    android:textColor="#ffdce1ea"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:includeFontPadding="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#ffdce1ea"
                    android:textSize="13sp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:src="@mipmap/home_top_more"
            android:padding="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="17dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_transfer_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资金划转"
                android:textColor="@color/color_33"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_recharge_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充币"
                android:textColor="@color/color_33"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_withdraw_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提币"
                android:textColor="@color/color_33"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_group_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入社群"
                android:textColor="@color/color_33"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>