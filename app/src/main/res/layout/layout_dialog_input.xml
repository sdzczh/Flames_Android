<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="300dp"
        android:orientation="vertical">
        <!--文本，标题和提示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="90dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/dialog_exit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/txt_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/dialog_exit_input"
                style="@style/EditText16spSignNum"
                android:layout_marginTop="10dp"
                android:background="@color/dark_main_model"
                android:textColor="@color/color_e6"
                android:textColorHint="@color/txt_all6" />
        </LinearLayout>

        <include layout="@layout/view_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_exit_negativeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="negative"
                android:textColor="@color/txt_all9"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_exit_positiveButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="positive"
                android:textColor="@color/txt_blue"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>