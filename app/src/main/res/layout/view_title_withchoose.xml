<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_titleWithChoose_frame"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical">
        <View
            android:id="@+id/view_titleWithChoose_statusBar"
            android:layout_width="match_parent"
            android:layout_height="22dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/view_titleWithChoose_back"
                android:layout_width="28dp"
                android:layout_height="43dp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:src="@mipmap/title_back"/>
            <TextView
                android:id="@+id/view_titleWithChoose_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:textSize="25sp"
                android:textColor="@color/color_525a66"
                android:text="我的标题"
                android:gravity="center"/>
            <TextView
                android:id="@+id/view_titleWithChoose_choose"
                android:text="筛选"
                android:drawableStart="@mipmap/shaixuan"
                android:drawablePadding="5dp"
                android:textSize="@dimen/font_14sp"
                android:textColor="#7A8799"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_divider_line"/>
</LinearLayout>