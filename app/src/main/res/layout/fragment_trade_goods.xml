<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">

    <!--顶部-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/fragment_tradeGoods_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0.5dp"
        android:orientation="vertical"
        android:background="@color/bg_white"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
            android:fitsSystemWindows="true">
            <!--币种-->
            <TextView
                android:id="@+id/fragment_tradeGoods_c2cName"
                android:text="DK/CNY"
                android:textSize="20sp"
                android:paddingStart="15dp"
                android:textColor="@color/txt_title"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@mipmap/coinchoose_right"
                android:drawablePadding="10dp"
                android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="17dp"
                android:paddingBottom="10dp"
                android:layout_height="match_parent">

                <!--左半边-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                        <!--切换买入卖出-->
                        <RadioGroup
                            android:id="@+id/fragment_tradeGoods_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/fragment_tradeGoods_group_buy"
                                style="@style/goods_radiobtn_limitormarket"
                                android:background="@drawable/selector_radio_bg_green_grey_left"
                                android:textColor="@color/white"
                                android:checked="true"
                                android:text="买入"
                                android:layout_marginRight="-2.5dp"/>

                            <RadioButton
                                android:id="@+id/fragment_tradeGoods_group_sale"
                                style="@style/goods_radiobtn_limitormarket"
                                android:background="@drawable/selector_radio_bg_red_grey_right"
                                android:textColor="@color/white"
                                android:text="卖出"
                                android:layout_marginLeft="-2.5dp"/>
                        </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                        <!--切换限价市价-->
                    <TextView
                        android:id="@+id/fragment_tradeGoods_limitOrMarket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@mipmap/arrow_down_1"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:minLines="1"
                        android:text="限价"
                        android:textColor="@color/txt_content"
                        android:textSize="@dimen/font_13sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                            <!--限价时输入价格-->
                            <app.com.pgy.Widgets.AmountView
                                android:id="@+id/fragment_tradeGoods_limitPrice"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                            <!--市价价格-->
                            <TextView
                                android:id="@+id/fragment_tradeGoods_marketPrice"
                                android:text="以当前最优价格交易"
                                android:visibility="gone"
                                android:textColor="#8F9DB3"
                                android:maxLines="1"
                                android:textSize="@dimen/font_14sp"
                                android:background="@drawable/bg_corners_f5solid"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/fragment_tradeGoods_priceOfCny"
                        android:text="≈0 CNY"
                        android:textColor="@color/txt_content"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                            <!--限价时输入数量-->
                            <app.com.pgy.Widgets.AmountView
                                android:id="@+id/fragment_tradeGoods_amount"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/fragment_tradeGoods_available"
                        android:text="可用0CNY"
                        android:textSize="@dimen/font_12sp"
                        android:textColor="@color/txt_content"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                    <RadioGroup
                        android:id="@+id/fragment_tradeGoods_percentGroup"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_corners_f5solid"
                        android:orientation="horizontal"
                        android:layout_height="25dp">

                        <RadioButton
                            android:id="@+id/fragment_tradeGoods_percentGroup_first"
                            android:text="25%"
                            android:background="@drawable/selector_radio_bg_green_grey_left"
                            style="@style/radio_trade_percent" />

                        <RadioButton
                            android:id="@+id/fragment_tradeGoods_percentGroup_second"
                            android:text="50%"
                            android:background="@drawable/selector_radio_bg_green_grey"
                            style="@style/radio_trade_percent" />
                        <RadioButton
                            android:id="@+id/fragment_tradeGoods_percentGroup_third"
                            android:text="75%"
                            android:background="@drawable/selector_radio_bg_green_grey"
                            style="@style/radio_trade_percent" />
                        <RadioButton
                            android:id="@+id/fragment_tradeGoods_percentGroup_forth"
                            android:text="100%"
                            android:background="@drawable/selector_radio_bg_green_grey_right"
                            style="@style/radio_trade_percent" />
                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"/>
                    <LinearLayout
                        android:id="@+id/fragment_tradeGoods_tradeAmountFrame"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="交易额"
                            android:textColor="@color/txt_content"
                            android:textSize="13sp"
                            android:layout_marginEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/fragment_tradeGoods_tradeAmount"
                            android:text="0.00CNY"
                            android:textSize="14sp"
                            android:textColor="@color/txt_content"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                    <!--中间买入卖出按钮-->
                    <TextView
                        android:id="@+id/fragment_tradeGoods_trade"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="买入"
                        android:textColor="@drawable/selector_enable_font_light_white"
                        android:background="@drawable/selector_bg_app_color_small"
                        android:textSize="@dimen/font_15sp" />

                    <!--中间登录按钮-->
                    <TextView
                        android:id="@+id/fragment_tradeGoods_login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="登录/注册"
                        android:textColor="@drawable/selector_enable_font_light_white"
                        android:background="@drawable/selector_bg_app_color_small"
                        android:textSize="@dimen/font_15sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                    <!--K线图-->
                    <LinearLayout
                        android:id="@+id/fragment_tradeGoods_kline_frame"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="90dp">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/fragment_tradeGoods_kline"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"/>
                        <LinearLayout
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/fragment_tradeGoods_klineTime_first"
                                android:textSize="10sp"
                                android:textColor="#A3B4CC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/fragment_tradeGoods_klineTime_second"
                                android:textSize="10sp"
                                android:textColor="#A3B4CC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/fragment_tradeGoods_klineTime_third"
                                android:textSize="10sp"
                                android:textColor="#A3B4CC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <!--右半边-->
                <LinearLayout
                    android:paddingStart="20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--列表头部-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:text="档位"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_10sp"
                            android:textColor="#C4C7CC"
                            android:visibility="gone"/>

                        <TextView
                            android:text="价格"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_11sp"
                            android:textColor="@color/txt_B8C6D2"/>

                        <TextView
                            android:text="数量"
                            android:layout_marginEnd="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_11sp"
                            android:textColor="@color/txt_B8C6D2"/>
                    </LinearLayout>
                    <View
                        style="@style/Line"
                        android:layout_marginTop="5dp"/>
                    <!--卖出列表-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/fragment_tradeGoods_list_sale"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>

                    <!--当前价格-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/fragment_tradeGoods_currentPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/txt_01C18B"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:text="0.00" />
                            <TextView
                                android:id="@+id/fragment_tradeGoods_currentPrice_cny"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="≈0.00 CNY"
                                android:textSize="@dimen/font_12sp"
                                android:textColor="@color/txt_B8C6D2"
                                android:maxLines="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                    <!--买入列表-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_tradeGoods_list_buy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="档位："
                            android:textColor="@color/txt_content"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/fragment_tradeGoods_gear"
                            android:text="10"
                            android:textSize="@dimen/font_11sp"
                            android:textColor="@color/txt_content"
                            android:drawableRight="@mipmap/sort"
                            android:drawablePadding="5dp"
                            android:clickable="false"
                            android:enabled="false"
                            android:minWidth="40dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_width="76dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_light8stroke_whitesoild"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/Line_10"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <!--Tab-->
            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/fragment_tradeGoods_tab"
                style="@style/TabLayoutTextStyle12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:xTabTextAppearance="@style/TabLayoutTextStyle12"
                app:xTabSelectedTextColor="@color/txt_title"
                app:xTabTextColor="@color/txt_B8C6D2"
                app:xTabTextSize="15sp"
                app:xTabSelectedTextSize="15sp"
                app:tabMode="fixed"
                app:tabGravity="center"
                app:xTabIndicatorHeight="0dp"
                app:tabTextColor="@color/txt_B8C6D2"/>

            <ImageView
                android:id="@+id/fragment_tradeGoods_refresh"
                android:src="@mipmap/shuaxin_grey"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <View
            style="@style/Line"/>
    </android.support.design.widget.AppBarLayout>

    <!--底部流水列表-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <!--底部内容-->
        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_tradeGoods_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
