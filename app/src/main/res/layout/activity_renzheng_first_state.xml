<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_main_model">
    <include layout="@layout/view_personal_title"/>
    <include layout="@layout/view_divider_line_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_state_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/renzheng_success"
            android:layout_marginTop="95dp"/>
        <TextView
            android:id="@+id/tv_state_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证通过"
            android:textColor="@color/color_e6"
            android:textSize="16sp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/tv_state_statedesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已通过 基础认证 获得 [提币] 和 [法币交易] 权限"
            android:textColor="#ff959595"
            android:textSize="14sp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_state_tofabi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去法币交易"
        android:textColor="#ff3f75f1"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_state_tosecond"
        style="@style/SubmitTextView"
        android:text="开始Lv.2高级认证"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        />
</LinearLayout>