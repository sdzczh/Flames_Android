<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_main_model"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:background="@color/dark_main_model"
        android:orientation="horizontal">

    <TextView
        android:text="获得"
        android:textSize="@dimen/font_14sp"
        android:textColor="@color/color_c4c7cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/item_digRecord_amount"
        android:text="0.00"
        android:textSize="@dimen/font_16sp"
        android:textColor="@color/color_e6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_digRecord_coinType"
        android:text="coin"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/font_14sp"
        android:textColor="@color/color_7a8799"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/item_digRecord_time"
        android:text="0分钟前"
        android:textSize="@dimen/font_12sp"
        android:textColor="@color/color_e6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>