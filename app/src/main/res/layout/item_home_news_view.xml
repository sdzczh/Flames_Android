<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:layout_height="wrap_content"
    android:background="@color/dark_main_model"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <TextView
        android:id="@+id/tv_item_home_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PGY合约大数据每日播报（9月9日）"
        android:textColor="@color/color_e6"
        android:textSize="16sp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_item_home_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sep 8, 2019 10:45:00 AM"
        android:textColor="@color/txt_all8"
        android:textSize="11sp"
        android:layout_marginTop="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_marginTop="15dp"/>
</LinearLayout>