<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_main_model"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/re_newfriends"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <app.com.pgy.Widgets.RoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/touxiang_orange"
            app:roundtype="circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_friends"
            android:textColor="@color/color_e6"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_unread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="1"
            android:background="@drawable/bg_circle_redsolid"
            android:layout_marginStart="10dp"
            android:textColor="@color/txt_white"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/dark_line_model" />

    <LinearLayout
        android:id="@+id/re_yibijingling"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <app.com.pgy.Widgets.RoundImageView
            android:id="@+id/iv_yb_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/touxiang"
            app:roundtype="circle" />

        <TextView
            android:id="@+id/iv_yb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yibijingling"
            android:textColor="@color/color_e6"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>