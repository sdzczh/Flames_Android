<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="10dp"
    android:layout_gravity="center"
    android:layout_marginBottom="0.5dp"
    android:background="@color/dark_main_model">

    <TextView
        android:id="@+id/item_im_redPackage_record_name"
        android:text="用户名"
        android:textColor="@color/color_e6"
        android:textSize="@dimen/font_16sp"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_im_redPackage_record_amount"
        android:text="0.0"
        android:textColor="@color/color_e6"
        android:textSize="@dimen/font_16sp"
        android:maxLines="1"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_im_redPackage_record_time"
        android:text="2018-01-01 19:00"
        android:textSize="@dimen/font_13sp"
        android:maxLines="1"
        android:textColor="@color/txt_all8"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_im_redPackage_record_priceOfCNY"
        android:text="≈¥0.00"
        android:textSize="@dimen/font_13sp"
        android:maxLines="1"
        android:textColor="@color/color_e6"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>