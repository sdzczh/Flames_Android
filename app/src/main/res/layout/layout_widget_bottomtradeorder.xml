<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_white_top_8"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/layout_widget_bottomTradeOrder_tradeCoinName"
            android:text="出售CNY"
            android:textSize="17sp"
            android:textColor="@color/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/close"
            android:paddingLeft="4dp"
            android:paddingBottom="4dp"/>
    </LinearLayout>


    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"/>-->
    <TextView
        android:id="@+id/layout_widget_bottomTradeOrder_perPrice"
        android:text="单价  ¥  1.00"
        android:textSize="@dimen/font_12sp"
        android:textColor="@color/txt_content"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="2"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/bg_light8stroke_whitesoild"
        android:layout_height="42dp"
        android:layout_marginTop="24dp">

        <app.com.pgy.Widgets.NumberEditText
            android:id="@+id/layout_widget_bottomTradeOrder_input_amount"
            android:hint="请输入出售数量"
            style="@style/EditText_default_input"
            android:layout_weight="1"
            android:padding="10dp"
            android:maxLength="11"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/layout_widget_bottomTradeOrder_coinName"
            android:text="CNY"
            android:textColor="#525A66"
            android:textSize="@dimen/font_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:background="@color/txt_app"/>

        <TextView
            android:id="@+id/layout_widget_bottomTradeOrder_btn_tradeAll"
            android:text="全部"
            android:textSize="@dimen/font_13sp"
            android:textColor="@color/txt_app"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"/>-->

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/layout_widget_bottomTradeOrder_limitPrice"
            android:text="限额 ¥200.00-¥2000.00"
            android:textColor="@color/txt_808DAC"
            android:textSize="@dimen/font_11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/layout_widget_bottomTradeOrder_realAmount"
            android:text="实际出售：0.00 CNY"
            android:textColor="@color/txt_808DAC"
            android:textSize="@dimen/font_11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="2"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额："
            android:textColor="@color/txt_title"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/layout_widget_bottomTradeOrder_tradeAllAmount"
            android:text="¥ 0.00"
            android:textSize="22sp"
            android:textColor="@color/txt_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="2"/>-->
    <TextView
        android:id="@+id/layout_widget_bottomTradeOrder_btn_trade"
        android:text="下单"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/font_16sp"
        style="@style/SubmitTextView"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
</FrameLayout>