<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_bg">
    <include layout="@layout/view_personal_title"/>
    <include layout="@layout/view_divider_line_10"/>
    <LinearLayout
        android:id="@+id/ll_activity_mywallet_transfer_coin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_title"
            android:textSize="16sp"
            android:text="币种选择"/>
        <TextView
            android:id="@+id/tv_activity_mywallet_transfer_coin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/color_292d33"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="BTC"
            android:layout_marginLeft="35dp"/>

        <ImageView
            android:layout_width="6dp"
            android:layout_height="11dp"
            android:src="@mipmap/home_notice_more"
            android:layout_marginRight="15dp"/>

    </LinearLayout>
    <include layout="@layout/view_divider_line"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_title"
                        android:textSize="15sp"
                        android:text="提币地址："
                        />
                    <EditText
                        android:id="@+id/edt_activity_mywallet_withdraw_toAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/txt_content"
                        android:textColorHint="@color/txt_B8C6D2"
                        android:hint="请输入或长按粘贴地址"
                        android:background="@color/white"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:id="@+id/iv_activity_mywallet_withdraw_scan"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/scan"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_line"
                    android:layout_marginLeft="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_title"
                        android:textSize="15sp"
                        android:text="数量：        "
                        />
                    <app.com.pgy.Widgets.NumberEditText
                        android:id="@+id/edt_activity_mywallet_withdraw_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/txt_content"
                        android:background="@color/white"
                        android:textColorHint="@color/txt_B8C6D2"
                        android:hint="最小提币数量0.01"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:maxLength="11"
                        android:maxLines="1"/>
                    <TextView
                        android:id="@+id/tv_activity_mywallet_withdraw_coinName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/color_7a8799"
                        android:textSize="16sp"
                        android:text=""/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/txt_app"/>
                    <TextView
                        android:id="@+id/tv_activity_mywallet_withdraw_chooseAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/txt_app"
                        android:text="全部"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <View
                    style="@style/Line_10"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/txt_808DAC"
                        android:text="可用"/>
                    <TextView
                        android:id="@+id/tv_activity_mywallet_withdraw_avail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/txt_808DAC"
                        android:text=""
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/tv_activity_mywallet_withdraw_coinName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/txt_808DAC"
                        android:text=""
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/txt_content"
                        android:text="手续费：    "/>

                    <TextView
                        android:id="@+id/tv_activity_mywallet_withdraw_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/txt_01C18B"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_activity_mywallet_withdraw_coinName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/txt_01C18B"
                        android:text=""
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="27dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/color_7a8799"
                        android:text="实际到账："/>
                    <TextView
                        android:id="@+id/tv_activity_mywallet_withdraw_realAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/txt_01C18B"
                        android:text=""
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/tv_activity_mywallet_withdraw_coinName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/txt_01C18B"
                        android:text=""
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_activity_mywallet_withdraw_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_7a8799"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:paddingTop="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="24dp"
                android:text="说点啥呢说点，啥呢说点啥，呢说点啥呢说点啥呢说点说点啥呢，说点啥呢说，点啥呢说点啥，呢说点啥呢说说点啥呢说点啥呢说点啥呢说，点啥呢说点"/>
            <TextView
                android:id="@+id/tv_activity_mywallet_withdraw_submit"
                style="@style/SubmitTextView"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:text="提币"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>