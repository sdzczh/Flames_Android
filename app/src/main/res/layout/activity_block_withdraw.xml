<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg_color">
    <include layout="@layout/view_personal_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_all8"
            android:textSize="12sp"
            android:text="提币地址"
            android:layout_marginTop="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/edt_activity_mywallet_withdraw_toAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/color_292d33"
                android:textColorHint="@color/color_c4c7cc"
                android:hint="请输入或长按粘贴地址"
                android:background="@color/dark_main_model"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"/>
            <ImageView
                android:id="@+id/iv_activity_mywallet_withdraw_scan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/scan"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_activity_block_withdraw_submit"
            style="@style/SubmitTextView"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="确认提取"/>
        <TextView
            android:id="@+id/tv_activity_block_withdraw_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_7a8799"
            android:textSize="12sp"
            android:lineSpacingExtra="3dp"
            android:layout_marginTop="30dp"
            android:text="@string/tiquwallet"/>
    </LinearLayout>

</LinearLayout>