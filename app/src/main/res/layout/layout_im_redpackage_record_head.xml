<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_main_model"
    android:layout_height="200dp">

    <app.com.pgy.Widgets.RoundImageView
        android:id="@+id/layout_im_redPackageRecordHead_icon"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/touxiang"
        app:roundtype="circle" />

    <TextView
        android:id="@+id/layout_im_redPackageRecordHead_type"
        android:text="共发出"
        style="@style/font_14all6"
        android:textColor="@color/txt_all8"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/layout_im_redPackageRecordHead_amount"
        android:text="¥0.00"
        android:textColor="@color/color_e6"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>