<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/txt_415C80">
        <FrameLayout
            style="@style/title_bg"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/piv_fragment_personal_item_system"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom|right"
                android:src="@mipmap/personal_system"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_white_top_8"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:id="@+id/ll_fragment_personal_userinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_fragment_personal_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_title"
                        android:textSize="20sp"
                        android:text="登录/注册"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:layout_marginTop="55dp"/>
                    <TextView
                        android:id="@+id/tv_fragment_personal_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_title"
                        android:textSize="13sp"
                        android:text="欢迎来到蒲公英"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <View
                    style="@style/Line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>
                <app.com.pgy.Widgets.PersonalItemView
                    android:id="@+id/piv_fragment_personal_item_wallet"
                    style="@style/PersonalItem"
                    app:iv_item_left_icon_visible="true"
                    app:iv_item_left_icon="@mipmap/personal_wallet"
                    app:tv_item_left_color="@color/txt_title"
                    app:tv_item_left_text="我的钱包"
                    app:iv_item_next_visible="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="21dp"/>

                <app.com.pgy.Widgets.PersonalItemView
                    android:id="@+id/piv_fragment_personal_item_safety"
                    style="@style/PersonalItem"
                    app:iv_item_left_icon_visible="true"
                    app:iv_item_left_icon="@mipmap/personal_safety"
                    app:tv_item_left_color="@color/txt_title"
                    app:tv_item_left_text="安全中心"
                    app:iv_item_next_visible="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="21dp"/>
                <app.com.pgy.Widgets.PersonalItemView
                    android:id="@+id/piv_fragment_personal_item_group"
                    style="@style/PersonalItem"
                    app:iv_item_left_icon_visible="true"
                    app:iv_item_left_icon="@mipmap/personal_group"
                    app:tv_item_left_color="@color/txt_title"
                    app:tv_item_left_text="加入社群"
                    app:iv_item_next_visible="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="21dp"/>
                <app.com.pgy.Widgets.PersonalItemView
                    android:id="@+id/piv_fragment_personal_item_web"
                    style="@style/PersonalItem"
                    app:iv_item_left_icon_visible="true"
                    app:iv_item_left_icon="@mipmap/personal_web"
                    app:tv_item_left_color="@color/txt_title"
                    app:tv_item_left_text="蒲公英官网"
                    app:iv_item_next_visible="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="21dp"/>
                <!--<app.com.onecoin.Widgets.PersonalItemView-->
                    <!--style="@style/PersonalItem"-->
                    <!--app:iv_item_left_icon_visible="true"-->
                    <!--app:iv_item_left_icon="@mipmap/personal_posters"-->
                    <!--app:tv_item_left_color="@color/color_525a66"-->
                    <!--app:tv_item_left_text="邀请海报"-->
                    <!--app:iv_item_next_visible="true"-->
                    <!--/>-->
                <include layout="@layout/view_divider_line_10"/>
                <LinearLayout
                    android:id="@+id/piv_fragment_personal_item_poster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="21dp"
                    android:paddingRight="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="22dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邀请好友"
                            android:textColor="@color/txt_title"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="邀请好友瓜分收益"
                            android:textColor="@color/txt_B8C6D2"
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/next"
                            android:layout_marginTop="3dp" />
                    </LinearLayout>
                    <app.com.pgy.Widgets.RatioImageView
                        android:id="@+id/iv_invitation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/personal_posters"
                        app:ratio="3.45"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="21dp"/>
                </LinearLayout>
            </LinearLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_fragment_personal_headerImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:riv_oval="true"
                app:riv_border_color="@color/white"
                app:riv_border_width="1dp"
                android:src="@mipmap/icon_unlogin"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"/>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/rl_fragment_personal_userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:layout_marginBottom="45dp"
            android:visibility="gone">

        </RelativeLayout>




        <app.com.pgy.Widgets.PersonalItemView
            android:id="@+id/piv_fragment_personal_item_yibi"
            style="@style/PersonalItem"
            app:iv_item_left_icon_visible="true"
            app:iv_item_left_icon="@mipmap/personal_yibi"
            app:tv_item_left_color="@color/color_525a66"
            app:tv_item_left_text="COIN精灵"
            app:iv_item_next_visible="true"
            android:visibility="gone"/>

        <app.com.pgy.Widgets.PersonalItemView

            style="@style/PersonalItem"
            app:iv_item_left_icon_visible="true"
            app:iv_item_left_icon="@mipmap/personal_system"
            app:tv_item_left_color="@color/color_525a66"
            app:tv_item_left_text="系统设置"
            app:iv_item_next_visible="true"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>