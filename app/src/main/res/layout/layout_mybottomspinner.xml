<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_bg_color"
    android:orientation="vertical">

    <ListView
        android:id="@+id/mybottomspinner_list"
        android:layout_width="match_parent"
        android:background="@drawable/bg_corners_whitesolid"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:divider="@color/dark_line_model"
        android:dividerHeight="1dp"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/mybottomspinner_cancel"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="取消"
        android:textSize="@dimen/font_16sp"
        android:textColor="@color/color_e6"
        android:background="@drawable/bg_corners_whitesolid"
        android:gravity="center"
        style="@style/wrapbutton_padding"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>