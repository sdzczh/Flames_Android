<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/ll_item_marker_list_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_item_market_list_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@color/color_c4c7cc"
            app:riv_oval="true" />
        <TextView
            android:id="@+id/tv_item_market_list_zhName"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/color_b8c0cc"
            android:layout_below="@+id/iv_item_market_list_icon"
            android:text="比特币比"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="平台/24h交易量"
            android:textColor="@color/txt_content"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="21dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_item_market_list_enName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_title"
                    android:textSize="16sp"
                    android:text="BTC"
                    android:includeFontPadding="false"/>
                <TextView
                    android:id="@+id/tv_item_market_list_percoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_B8C6D2"
                    android:textSize="12sp"
                    android:text="/CNY"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_item_market_list_volum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_B8C6D2"
                android:textSize="12sp"
                android:text="123456"
                android:includeFontPadding="false"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/Line"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="最新价"
            android:textColor="@color/txt_content"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="21dp">

            <TextView
                android:id="@+id/tv_item_market_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/txt_title"
                android:text="52430.1"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/tv_item_market_list_priceCny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:textColor="@color/txt_B8C6D2"
                android:text="￥ 52430.1"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/Line"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="涨跌幅"
            android:textColor="@color/txt_content"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_item_market_list_rise"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_corners_52cca3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="+0.096%"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/txt_bg"/>
</LinearLayout>