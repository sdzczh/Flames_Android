<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_bg">
    <include layout="@layout/view_personal_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="15sp"
                android:textColor="@color/txt_title"
                android:text="手机号"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/tv_activity_change_login_pw_tel"
                style="@style/EditText16spTel"
                android:textSize="13sp"
                android:textColor="@color/txt_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:hint="请输入手机号码"/>
            <TextView
                android:id="@+id/tv_activity_change_login_pw_verificationCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_4d94ff"
                android:textSize="11sp"
                android:text="获取验证码"
                android:includeFontPadding="false"
                android:layout_marginRight="20dp"
                android:padding="5dp"/>
        </LinearLayout>
        <include layout="@layout/view_divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="15sp"
                android:textColor="@color/txt_title"
                android:text="验证码"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/edt_activity_change_login_pw_verificationCode"
                style="@style/EditText16spCode"
                android:textColor="@color/txt_content"
                android:textColorHint="@color/txt_B8C6D2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="13sp"
                android:hint="请输入验证码"
                android:padding="5dp"/>

        </LinearLayout>
        <include layout="@layout/view_divider_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="15sp"
                android:textColor="@color/txt_title"
                android:text="新密码"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/edt_activity_change_login_pw_newpw"
                style="@style/EditText16spPw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/txt_content"
                android:textColorHint="@color/txt_B8C6D2"
                android:background="@color/white"
                android:textSize="13sp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:hint="请输入新密码"/>
            <ImageView
                android:id="@+id/iv_activit_change_login_pw_pwShow"
                android:layout_width="25dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@mipmap/pw_unshow"
                android:visibility="gone"/>
        </LinearLayout>
        <include layout="@layout/view_divider_line"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_808DAC"
        android:textSize="12sp"
        android:text="注：6~18位数字与字母组合（不含特殊字符）"
        android:layout_margin="20dp"
        android:includeFontPadding="false"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_activity_change_login_pw_submit"
        style="@style/SubmitTextView"
        android:text="确认"
        android:layout_marginBottom="34dp"/>
</LinearLayout>