<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/iv_activity_register_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/close"
        android:padding="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="14dp"
                app:riv_corner_radius="10dp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_title"
                android:textSize="24dp"
                android:text="注册奥丁账号"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:includeFontPadding="false"/>
            <LinearLayout
                android:id="@+id/ll_activity_register_backLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="13sp"
                    android:textColor="@color/txt_title"
                    android:text="已有账号，"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="13sp"
                    android:textColor="@color/txt_app"
                    android:text="登录" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/edt_activity_register_tel"
                        style="@style/EditText16spTel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="请输入手机号"
                        android:layout_marginRight="5dp"
                        />
                    <ImageView
                        android:id="@+id/iv_activity_register_clear"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/tel_clear"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <include layout="@layout/view_divider_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/edt_activity_register_verificationCode"
                        style="@style/EditText16spCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入验证码"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_activity_register_verificationCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_app"
                        android:textSize="12sp"
                        android:text="获取验证码"
                        android:includeFontPadding="false"/>
                </LinearLayout>
                <include layout="@layout/view_divider_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/edt_activity_register_password"
                        style="@style/EditText16spPw"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请设置登录密码"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:id="@+id/iv_activity_register_pwShow"
                        android:layout_width="25dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:src="@mipmap/pw_show"
                        android:visibility="gone"/>
                </LinearLayout>
                <include layout="@layout/view_divider_line"/>
                <EditText
                    android:id="@+id/edt_activity_register_refereeTel"
                    style="@style/EditText16spTel"
                    android:hint="邀请码（必填）"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"/>
                <include layout="@layout/view_divider_line"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_activity_register_submit"
                style="@style/SubmitTextView"
                android:background="@drawable/selector_bg_app_color_small"
                android:text="注册账号"
                android:enabled="false"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_c4c7cc"
            android:textSize="14sp"
            android:text="注册表示已阅读并同意"/>
        <TextView
            android:id="@+id/tv_activity_register_toAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_4d94ff"
            android:textSize="14sp"
            android:text="《奥丁使用协议》"/>
    </LinearLayout>
</LinearLayout>