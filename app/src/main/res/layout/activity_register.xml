<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login_bg"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_activity_register_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/close"
            android:padding="10dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_activity_register_backLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="已有账户？"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="14dp"
                app:riv_corner_radius="10dp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="27dp"
                android:text="注册"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"
                android:includeFontPadding="false"/>
            <RadioGroup
                android:id="@+id/rg_activity_register_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rb_activity_register_by_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="手机号"
                    android:checked="true"
                    android:textColor="@drawable/selector_radiobutton_txt_color"
                    android:layout_marginRight="35dp"/>
                <RadioButton
                    android:id="@+id/rb_activity_register_by_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:text="邮箱"
                    android:textColor="@drawable/selector_radiobutton_txt_color"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="40dp">
                <LinearLayout
                    android:id="@+id/ll_activity_register_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+86"
                        android:textColor="@color/txt_B8C6D2"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/to_bellow"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"/>
                    <EditText
                        android:id="@+id/edt_activity_register_tel"
                        style="@style/EditText16spTel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="手机号"
                        android:textSize="17sp"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"/>
                    <ImageView
                        android:id="@+id/iv_activity_register_clear"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/tel_clear"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:visibility="gone"/>
                </LinearLayout>
                <include layout="@layout/view_divider_line_white"/>
                <LinearLayout
                    android:id="@+id/ll_activity_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible">
                    <EditText
                        android:id="@+id/edt_activity_register_email"
                        style="@style/EditText16sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="请输入邀请码"
                        android:textSize="17sp"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"/>
                    <ImageView
                        android:id="@+id/iv_activity_register_emailclear"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/tel_clear"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:visibility="gone"/>
                </LinearLayout>
                <include layout="@layout/view_divider_line_white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">
                    <EditText
                        android:id="@+id/edt_activity_register_verificationCode"
                        style="@style/EditText16spCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入验证码"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_activity_register_verificationCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_app"
                        android:textSize="12sp"
                        android:text="获取验证码"
                        android:includeFontPadding="false"/>
                </LinearLayout>
<!--                <include layout="@layout/view_divider_line"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">
                    <EditText
                        android:id="@+id/edt_activity_register_password"
                        style="@style/EditText16spPw"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请设置登录密码"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:id="@+id/iv_activity_register_pwShow"
                        android:layout_width="25dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:src="@mipmap/pw_show"
                        android:visibility="gone"/>
                </LinearLayout>
<!--                <include layout="@layout/view_divider_line"/>-->
                <EditText
                    android:id="@+id/edt_activity_register_refereeTel"
                    style="@style/EditText16spTel"
                    android:hint="邀请码（必填）"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"/>
<!--                <include layout="@layout/view_divider_line"/>-->
            </LinearLayout>
            <TextView
                android:id="@+id/tv_activity_register_submit"
                style="@style/SubmitTextView"
                android:text="下一步"
                android:textColor="#33ffffff"
                android:background="#33ffffff"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="48dp"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_c4c7cc"
            android:textSize="14sp"
            android:text="注册表示已阅读并同意"/>
        <TextView
            android:id="@+id/tv_activity_register_toAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_4d94ff"
            android:textSize="14sp"
            android:text="《蒲公英使用协议》"/>
    </LinearLayout>
</LinearLayout>