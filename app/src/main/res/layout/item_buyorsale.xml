<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buyOrSale_item"
    android:layout_width="match_parent"
    android:layout_height="22dp"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/buyOrSale_item_bgColor_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/buyOrSale_item_bgColor_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/buyOrSale_item_type"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:maxWidth="20dp"
            android:text="1"
            android:textColor="#7A8799"
            android:textSize="12sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/buyOrSale_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0.00"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/buyOrSale_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="0.00"
            android:textColor="@color/txt_title"
            android:textSize="13sp"
            android:paddingLeft="10dp"/>
    </LinearLayout>
</FrameLayout>