<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/dark_main_model">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:layout_height="@dimen/title_content_height">
    <EditText
        android:id="@+id/layout_searchTitle_input"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/EditText_default_input"
        android:drawableStart="@mipmap/shousuo"
        android:drawablePadding="8dp"
        android:hint="请输入手机号"
        android:focusableInTouchMode="true"
        android:imeOptions="actionSearch"
        android:focusable="true"
        android:maxLines="1"
        android:inputType="text"
        android:imeActionLabel=""/>
        <TextView
            android:id="@+id/layout_searchTitle_cancel"
            android:text="取消"
            android:textSize="@dimen/font_13sp"
            android:textColor="@color/txt_black"
            android:background="@drawable/bg_corners_bluesolid"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="0.5dp"
        android:background="@color/bg_blue"/>
</FrameLayout>