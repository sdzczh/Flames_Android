<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_diyaorder_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5000PGY"
            android:textColor="#FF333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_diyaorder_diyadate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵押日期：2019-01-01"
            android:textColor="#FF333333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.33dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_diyaorder_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="日利率：2.5%"
            android:textColor="#FF333333"
            android:textSize="12.67sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_diyaorder_releasedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="释放日期：2019-01-01"
            android:textColor="#FF333333"
            android:textSize="12sp" />
    </LinearLayout>

    <app.com.pgy.Widgets.TextProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.33dp"
        android:max="100"
    android:progressDrawable="@drawable/pb_shape_blue"
        android:progress="0"/>
    <!--android:progressDrawable="@drawable/bg_progressbar"-->

    <!--android:indeterminateTintMode="src_atop"-->
    <!--android:indeterminateTint="@color/colorPrimary"-->

</LinearLayout>