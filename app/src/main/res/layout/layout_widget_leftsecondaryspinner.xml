<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_main_model"
    android:layout_width="wrap_content"
    android:minWidth="200dp"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/layout_widget_leftSecondarySpinner_close"
            android:src="@mipmap/coinchoose_left"
            android:padding="10dp"
            android:layout_gravity="end|center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/layout_widget_leftSecondarySpinner_tab"
        style="@style/TabLayoutTextStyle15"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="1dp"
        app:tabTextAppearance="@style/TabLayoutTextStyle20"
        app:tabIndicatorColor="#DFBD86"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#DFBD86"
        app:tabGravity="center"
        app:tabTextColor="@color/txt_all8" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/layout_widget_leftSecondarySpinner_list"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

</LinearLayout>