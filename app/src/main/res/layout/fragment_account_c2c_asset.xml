<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@mipmap/asset_top">
        <ImageView
            android:id="@+id/iv_fragment_account_c2c_show"
            android:layout_width="16dp"
            android:layout_height="11dp"
            android:src="@mipmap/asset_show"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总净资产"
            android:textColor="#66ffffff"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="27dp"
                android:src="@mipmap/home_top_coin"/>
            <TextView
               android:id="@+id/tv_fragment_account_c2c_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00000000"
                android:textColor="#ffffffff"
                android:textSize="27sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈￥"
                android:textColor="#66ffffff"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/tv_fragment_account_c2c_totalcny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#66ffffff"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_fragment_account_c2c_recharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_recharge_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充币"
                android:textColor="@color/color_33"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fragment_account_c2c_withdraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_withdraw_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提币"
                android:textColor="@color/color_33"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fragment_account_c2c_trust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/home_transfer_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资金划转"
                android:textColor="@color/color_33"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_divider_line_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="资产明细"
        android:textColor="#ff666666"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"/>
    <include layout="@layout/view_divider_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fragment_account_c2c__list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_error_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_error_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_b8c0cc"
                android:textSize="14sp"
                android:text="账户还没有币种"/>
            <Button
                android:id="@+id/btn_error_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_b8c0cc"
                android:text="重新加载"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </FrameLayout>
    <include layout="@layout/view_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_fragment_account_c2c_recharge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="充币"
            android:textColor="#ff3075ee"
            android:textSize="16sp"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:background="@mipmap/xuxian_v"/>
        <TextView
            android:id="@+id/tv_fragment_account_c2c_withdraw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="提币"
            android:textColor="#ff3075ee"
            android:textSize="16sp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@mipmap/xuxian_v"/>
        <TextView
            android:id="@+id/tv_fragment_account_c2c_trust"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="资金划转"
            android:textColor="#ff3075ee"
            android:textSize="16sp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>